_export () { export $1=$2; }

# my modules
_export MYBORG_CONFIG_MODULES ${HOME}/.local/var/bch/myborg/modules
_export src https://github.com/bryanhann/borg.modules.bch
_export dst ${MYBORG_CONFIG_MODULES}/500.borg.module.bch
mkdir -p    ${MYBORG_CONFIG_MODULES}
[ -d $dst ] || git clone ${src} ${dst}

