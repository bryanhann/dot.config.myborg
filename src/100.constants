_export () { 
    local name=${1}
    shift
    export ${name}="$*"; 
}
_export MYBORG_INDEX        ~/.local/var/myborg/current.txt
_export MYBORG              $(cat ${MYBORG_INDEX})
_export MYBORG_BUILD        ${MYBORG}/.BUILD
_export MYBORG_MODS         ${MYBORG_BUILD}/mods
_export BORG                ${MYBORG_BUILD}/borg
_export MYBORG_MODSPEC_DIR  ${MYBORG}/mods
_export MYBORG_DOTFILE_DIR  ${MYBORG}/dots
